<%= form_for @post do |f| %>

	<% if @post.errors.any? %>

		<h2><%= pluralize(@post.errors.count,"error") %> prevented this post from savng:</h2>

		<ul>
			<%= @post.errors.full_messages.each do |msg| %>
				<li><%= msg %> </li>
				<% end %>
		</ul>

	<%end%>
	
	<%= f.label :title %><br>
	<%= f.text_field(:title,:style => "width:400px") %>

	<br>
	<br>

	<%= f.label :content ,"Write your article here" %><br>
	<%= f.text_area(:content,:class => "text-area-size") %>	
	<%= f.file_field(:image,:class => "image-area") %>
	<br>
	<br>

	<div class="submit-button">
	<%= f.submit %>
</div>

<% end %>